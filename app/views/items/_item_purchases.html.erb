<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Purchases

    <a data-toggle="collapse" href="#item_purchases_new_form">
      Add purchase
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @item.purchases.each do |purchase| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to purchase, purchase %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to purchase, method: :delete, data: { confirm: "Do you really want to delete this purchase" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="item_purchases_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
