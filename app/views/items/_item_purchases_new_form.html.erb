<!-- Form purchase start -->
<%= form_with(model: @purchase, local: true) do |f| %>
<!-- Form purchase end -->

  <!-- Label and input for item_id start -->
  <!-- Input for item_id start -->
  <%= f.hidden_field :item_id, value: @item.id %>
  <!-- Input for item_id end -->
  <!-- Label and input for item_id end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <%= f.label :user_id %>

    <!-- Input for user_id start -->
    <%= f.text_field :user_id, class: "form-control" %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <%= f.submit "Create purchase", class: "btn btn-block btn-outline-secondary" %>
<% end %>
