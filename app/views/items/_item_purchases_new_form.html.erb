<%= form_with(model: @purchase, local: true) do |f| %>

  <%= f.hidden_field :item_id, value: @item.id %>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create purchase", class: "btn btn-block btn-outline-secondary" %>
<% end %>
